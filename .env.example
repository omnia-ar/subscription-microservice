# ============================================
# NUEVAS VARIABLES DE ENTORNO - ERROR HANDLING
# ============================================

# Circuit Breaker Configuration
# Número de fallos consecutivos antes de abrir el circuito
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5

# Número de éxitos necesarios para cerrar el circuito desde HALF_OPEN
CIRCUIT_BREAKER_SUCCESS_THRESHOLD=2

# Tiempo (ms) que el circuito permanece abierto antes de intentar HALF_OPEN
CIRCUIT_BREAKER_TIMEOUT=60000

# Tiempo (ms) para resetear contadores de fallos
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Retry Configuration
# Número de reintentos automáticos para llamadas fallidas
AXIOS_RETRY_COUNT=3

# Delay base (ms) entre reintentos (se aplica backoff exponencial)
AXIOS_RETRY_DELAY=1000

# Timeout Configuration (en milisegundos)
# Timeout para llamadas al API principal
AXIOS_TIMEOUT_API_MAIN=15000

# Timeout para llamadas al microservicio de notificaciones
AXIOS_TIMEOUT_NOTIFICATION=10000

# Timeout para llamadas al microservicio de pagos
AXIOS_TIMEOUT_PAYMENT=20000

# Logging Configuration
# Nivel de logging: ERROR, WARN, INFO, DEBUG
LOG_LEVEL=info

# Ambiente de ejecución: development, production
NODE_ENV=development

